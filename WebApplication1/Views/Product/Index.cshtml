@model Product
@{
    <div class="row">
        <div class="col-9 card shadow">
            <img class="card-img-top" src="@Model.ImagePath">
        </div>
        <div class="col-3">
            <a><h5>@Model.Name</h5></a>
            <h5>@Model.Cost руб.</h5>
            <div>
                <a class="btn btn-outline-dark btn-in-concret-card" href="/Home/Index">Продолжить покупки</a>
                <a class="btn btn-dark btn-in-concret-card" href="/Basket/Add?productId=@Model.Id">Добавить в корзину</a>
            </div>
        </div>
    </div>
}
