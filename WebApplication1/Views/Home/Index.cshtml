@model List<Product>

@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
    @foreach (var product in Model)
    {

        <div class="col-3 card shadow">
            <div style= width: 18rem;">
                <img class="card-img-top" src="@product.ImagePath">
            </div>
            <div class="card-body">
                <a style="color: black" href="/Product/Index/@product.Id"><h5>@product.Name</h5></a>
                <h5>@product.Cost руб.</h5>
                <a class="btn btn-dark" href="/Basket/Add?productId=@product.Id">Добавить в корзину</a>
            </div>
        </div>

    }
</div>


<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
